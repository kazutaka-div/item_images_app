%h2 Sign up

= form_with model: @user, url: user_registration_path, local: true do |f|

  .field
    = f.label :nickname
    %br
    = f.text_field :nickname

  .field
    = f.label :email
    %br
    = f.email_field :email

  - if @sns_id.present?
    = hidden_field_tag :sns_auth, true
  - else
    .field
      = f.label :password
      %br
      = f.password_field :password

    .field
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation

  .field
    = f.label :birthday
    %br
    = raw sprintf(f.date_select(:birthday, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1), date_separator: '%s'), '年 ', '月 ') + '日'
    -# = f.date_select :birthday, use_month_numbers: true,start_year: 1930, end_year: (Time.now.year), default: Date.new(1989, 1, 1)

  .actions
    = f.submit "Next"

