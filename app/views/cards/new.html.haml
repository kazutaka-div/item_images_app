= form_with model: @card, id: "card_form" do |f|

  .field
    = f.label :hoge, "カード番号"
    %br
    = f.text_field :hoge, required: true, maxlength: 16, id: "card_number_form", placeholder: "1234 5678 1234 5678"

  .field
    = f.label :hoge, "有効期限"
    %br
    = f.select :hoge, 1..12, {include_blank: "---"}, id: "exp_month_form"
    = f.select :hoge, [[20, 2020], [21, 2021], [22, 2022], [23, 2023], [24, 2024], [25, 2025]], {include_blank: "---"}, id: "exp_year_form"

  .field
    = f.label :hoge, "セキュリティコード"
    %br
    = f.text_field :hoge, required: true,  id: "cvc_form", placeholder: "カード背面４桁もしくは３桁の番号"

  #card_token

  = f.submit "次へ進む", id: "regist_card"